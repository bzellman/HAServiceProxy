{
  "name": "HAServiceProxy",
  "version": "1.0.0",
  "slug": "haserviceproxy",
  "description": "Access internal services through Home Assistant",
  "options": {
    "services": [],
    "ssl_key_path": "",
    "ssl_cert_path": ""
  },
  "schema": {
    "services": [
      {
        "name": "str",
        "ip_address": "str",
        "sidebar": "bool"
      }
    ],
    "ssl_key_path": "str",
    "ssl_cert_path": "str"
  },
  "ingress": true,
  "ingress_entry": "/api/hassio_ingress/",
  "ingress_port": 8099,
  "ingress_panel": true,
  "boot": "auto",
  "auto_uart": false,
  "map": ["config:rw"],
  "host_network": true,
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "BUILD_FROM": "nginx:alpine"
    }
  },
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"]
}
