{
  "name": "HAServiceProxy",
  "version": "1.0.0",
  "slug": "haserviceproxy",
  "description": "Expose internal services securely through Home Assistant",
  "startup": "services",
  "boot": "auto",
  "options": {
    "services": [
      {
        "name": "my-service",
        "ip_address": "192.168.0.205:8080",
        "sidebar": true
      }
    ],
    "ssl_key_path": "/ssl/privkey.pem",
    "ssl_cert_path": "/ssl/fullchain.pem"
  },
  "schema": {
    "services": [
      {
        "name": "str",
        "ip_address": "str",
        "sidebar": "bool?"
      }
    ],
    "ssl_key_path": "str",
    "ssl_cert_path": "str"
  },
  "ingress": true,
  "ingress_entry": "/api/hassio_ingress/",
  "ingress_port": 8099,
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "stage": "experimental",
  "hassio_api": true,
  "homeassistant_api": true
}
